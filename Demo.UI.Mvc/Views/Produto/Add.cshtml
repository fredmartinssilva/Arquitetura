@model Demo.UI.Mvc.ViewModels.ProdutoView
@{
    ViewBag.Title = "Novo Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar Produto</h2>
<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Voltar", "Index", "Produto")
        @Html.ValidationSummary(null, new { @class = "text-danger" })
    </div>
</div>
@{ Html.EnableClientValidation(); }
@using (Html.BeginForm("Add", "Produto", FormMethod.Post, new { id = "frm-cadastra-produto" }))
{    
    <div class="form-group">
        @Html.LabelFor(model => model.Nome)
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Preco)
        @Html.TextBoxFor(model => model.Preco, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-lg btn-primary"> Salvar </button>
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}